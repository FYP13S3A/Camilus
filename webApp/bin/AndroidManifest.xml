<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camilus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.camilus.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.camilus.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.camilus.DeliveryActivity"
            android:label="@string/title_activity_delivery"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.camilus.CollectionActivity"
            android:label="@string/title_activity_collection"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.camilus.SignatureActivity"
            android:label="@string/title_activity_signature"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
